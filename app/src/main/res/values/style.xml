<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RoundImageView" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="RoundImageView_20" parent="">
        <item name="cornerSize">@dimen/_20sdp</item>
    </style>

    <style name="RoundImageView_15" parent="">
        <item name="cornerSize">@dimen/_15sdp</item>
    </style>

    <style name="RoundImageView_10" parent="">
        <item name="cornerSize">@dimen/_10sdp</item>
    </style>

    <style name="AppTextRegular">
        <item name="android:fontFamily">@font/helvetica_now_display_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/app_blue</item>
    </style>

    <style name="AppTextMedium">
        <item name="android:fontFamily">@font/helvetica_now_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/app_blue</item>
    </style>

    <style name="AppTextBold">
        <item name="android:fontFamily">@font/helvetica_now_display_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/app_blue</item>
    </style>


    <style name="AppTextExtraBold">
        <item name="android:fontFamily">@font/helvetica_now_display_extra_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/app_blue</item>
    </style>

    <style name="AppTextBlack">
        <item name="android:fontFamily">@font/helvetica_now_display_black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/app_blue</item>
    </style>

    <style name="AppToolbarStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="popupMenuBackground">@drawable/popup_bg</item>
        <item name="android:textColor">@color/app_blue</item>
        <item name="textSize">secondary</item>
        <item name="android:textAppearance">@style/AppTextMedium</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="CustomDialog">
        <item name="background">@drawable/bottom_sheet_bg</item>
       <!-- <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:backgroundDimEnabled">true</item>-->
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <style name="RippleEffect">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="MonthPickerDialogStyle">
        <item name="headerBgColor">@color/app_color</item>
        <item name="monthBgSelectedColor">@color/app_color</item>
    </style>

    <style name="PickerStyle" parent="Theme.AppCompat" />

    <style name="FastScrollerTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/app_white</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>

    <style name="ContactsPopupTextViewStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/_26sdp</item>
        <item name="android:textColor">@android:color/white</item>

    </style>

    <style name="Custom_CardView_Dialog">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/filter_bg</item>
        <item name="android:backgroundTint">@color/app_white</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/_12sdp</item>
    </style>

    <style name="App_Radio">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:buttonTint">@color/logo_checkbox_state</item>
        <item name="android:clickable">false</item>
        <item name="android:textColor">@color/app_black</item>
        <item name="android:textColorSecondary">@color/app_black</item>
        <item name="android:colorControlNormal">@color/app_black</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:singleLine">true</item>
        <item name="android:padding">@dimen/_6sdp</item>
    </style>


</resources>