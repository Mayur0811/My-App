<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/_12sdp">

    <CheckBox
        android:id="@+id/cbAction"
        android:layout_width="@dimen/_18sdp"
        android:layout_height="@dimen/_18sdp"
        android:background="@drawable/radio_selector"
        android:button="@null"
        android:checked="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.messages.common.custom_views.MessageTextView
        android:id="@+id/tvActionName"
        style="@style/AppTextMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_11sdp"
        app:layout_constraintBottom_toBottomOf="@id/cbAction"
        app:layout_constraintStart_toEndOf="@id/cbAction"
        app:layout_constraintTop_toTopOf="@id/cbAction"
        app:textSize="primary"
        tools:text="@string/app_name" />

    <View
        android:id="@+id/viewAction"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_11sdp"
        android:background="@color/app_light_gray"
        app:layout_constraintTop_toBottomOf="@id/tvActionName" />

</androidx.constraintlayout.widget.ConstraintLayout>